{# empty Twig template #}
{% extends 'AppBundle:Layout:template.html.twig' %}

{% block css %}

{% endblock %}

{% block title %}Dashboard{% endblock %}

{% block subtitle %}<small></small>{%endblock%}

{% block navigation %}

{%endblock%}

{% block maincontent %}

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Registrar Tipo de Videojuego</h3>
        </div>
        <div class="box-body">
            {{ form_start
(formTipo) }}
            {{ form_errors(formTipo) }}
            {{ form_row(formTipo.tipojuego)}}
            <br>
            {{ form_widget(formTipo.submit, {'attr': {'class': 'btn btn-primary'},'label': 'Aceptar'}) }}
            {{ form_end(formTipo) }}
        </div>
    </div>
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Lista de Tipos de Videojuegos</h3>
        </div>

        <div class="box-body">
            {%if listTipo!=null%}
                <table class="table table-bordered">
                    <tr>
                        <th>Tipo de videojuego</th>
                        <th>Acciones</th>
                    <tr>
                    <tbody>
                        {% for item in listTipo %}
                            <tr>
                                <td>{{item.tipojuego}}</td>
                                <td>
                                    <a href="{{path('app_admin_update_tipo',{'id':item.idclasificaciondetipo | urlencrypt})}}" class="btn btn-primary">Modificar</a>
                                    <a href="{{path('app_admin_delete_tipo',{'id':item.idclasificaciondetipo})}}" class="btn btn-danger">Eliminar</a>
                                </td>
                            </tr>
                        {%endfor%}
                    </tbody>
                </table>
                {{knp_pagination_render(listTipo)}}
            {%endif%}
        </div>
    </div>


{%endblock%}

